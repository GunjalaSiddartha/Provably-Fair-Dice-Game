{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/index.js" }
    ],
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ]
  }